// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Newsletter {
  id          String   @id
  name        String
  subject     String
  content     String   @db.Text
  createdAt   DateTime
  updatedAt   DateTime @updatedAt
  publishedAt DateTime?
}

model Cache {
  key       String   @id
  value     String   @db.Text
  expiresAt DateTime
}

model AIModel {
  id              String   @id @default(cuid())
  name            String   @unique
  slug            String   @unique
  description     String   @db.Text
  shortDescription String
  logoUrl         String?
  websiteUrl      String?
  advantages      String[] @db.Text
  disadvantages   String[] @db.Text
  pricing         Json?    // { type: 'free' | 'paid' | 'freemium', startingPrice?: number, currency?: string }
  hasAPI          Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  categories      Category[]
  tags           Tag[]
}

model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  slug        String    @unique
  description String    @db.Text
  models      AIModel[]
}

model Tag {
  id          String    @id @default(cuid())
  name        String    @unique
  models      AIModel[]
}
